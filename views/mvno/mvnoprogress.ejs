    <style type="text/css">
    
        /* progress bar */
        #myProgress {
          width: 100%;
          background-color: #ddd;
        }
        
        #myBar {
          width: 10%;
          height: 30px;
          background-color: #4CAF50;
          text-align: center;
          line-height: 30px;
          color: white;
        }
        
    </style>
    
    <script type="text/javascript">
    
        // progress bar
        function move() {
          var elem = document.getElementById("myBar");   
          var width = 10;
          var id = setInterval(frame, 100);
          function frame() {
            if (width >= 100) {
                clearInterval(id);
                
                // 일단 progress완료시 결과페이지로 이동하도록 함 => ajax조회 결과가 완료일때 이동하도록 수정
                if(confirm('데이터생성이 완료되었습니다. 지금 결과를 확인 하시겠습니까?')){
                    location.href = '/mvno/mvnoresult/' + $("#req_id").val();
                }
              
            } else {
              width++; 
              elem.style.width = width + '%'; 
              elem.innerHTML = width * 1  + '%';
            }
          }
        }
        
    </script>
    
    <script>
        // toggle progress bar
        $(document).ready(function() { move(); });
    </script>
  
</head>


